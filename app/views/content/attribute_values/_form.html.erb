<h2 id="_default"><i class="icon-accessibility on-left"></i>Datos generales</h2>

<div class="example">
	
<%= semantic_form_for(@content_attribute_value) do |f| %>
  <%= f.semantic_errors %>

  
    <%= #f.label :attribute_id 
    %>
    
    <%= #f.select :attribute_id, @content_attributes.collect { |t| [t.name, t.id]}, {:include_blank=>"Seleccione"}, {:class => 'combobox'} 
    %>    
  
  
  <%= f.inputs do %>
  	<div class="input-control text block" data-role="input-control">
    <%= f.input :name, :label => "Nombre", :hint =>"Escriba el nombre", :required => true %>
    </div>
    <br />
    <div class="input-control textarea block" data-role="input-control">
    <%= f.input :description, :label => "Descripción", :hint =>"Escriba la descripción" %>
    </div>
    <div class="input-control select block" data-role="input-control">
    <%= f.input :attribute_id, :as => :select, :collection => @content_attributes.collect { |t| [t.name, t.id]} %>
    </div>
    <div class="input-control number block" data-role="input-control">
    <%= f.input :color, :as => :number, :label => "Color" %>
    </div>
    
    <br />
    <div class="grid">
		<div class="row">
		    <div class="span6">      
		    <%= f.input :icon, :label => "Ícono", :hint =>"Seleccione un ícono en formato PNG, de tamaño un poco mayor a 256px por lado.", :required => true %>
		    </div>    
		    <div class="span2">
		    	<br />
		    <%= image_tag @content_attribute_value.icon.url(:high) %>
		    </div>
    	</div>
   	</div>
   	
  <% end %>
  
  <br /><br />
  
  <%= f.actions do %>
    <%= f.action :submit, :button_html => { :class => "primary", :disable_with => 'Espere por favor...' } %>
  <% end %>
<% end %>

</div>
