{
	"title":"Lista de Categorias",
	"lista_categorias":{
  <%
  @i = 0 #contador para ver si se agrega la coma al final o no 
  @cat_length = categories.length
  
  @j = 0 #contador para ver si se agrega la coma al final o no 
  @values_length = 0
    
  categories.each do |category| %>	
	"<%=category.slug%>":[
		<%
		@j = 0
		@values_length = category.list_attribute_values.size
		category.list_attribute_values.each do |cat_value| %>
		{
			"id":<%=cat_value.id%>,
			"nombre":"<%=cat_value.name%>",
			"descripcion":"<%=cat_value.description%>"
			<%if category.slug = "morfologia"%>
				"url":{
					"medium":"<%=root_url(:only_path => false)+"assets/img/icons/pyramid-32x32.png"%>",
					"high":"<%=root_url(:only_path => false)+"assets/img/icons/pyramid-48x48.png"%>",
					"x-high":"<%=root_url(:only_path => false)+"assets/img/icons/pyramid-72x72.png"%>",
					"xx-high":"<%=root_url(:only_path => false)+"assets/img/icons/pyramid-96x96.png"%>",
					"xxx-high":"<%=root_url(:only_path => false)+"assets/img/icons/pyramid-144x144.png"%>"
				}
			<%end%>
		}
		<%
		  @j = @j + 1
		  if @j < @values_length %>
		    <%=","%>
		  <%	
		  end
		   
	  	end %>
		]		
  <%
  @i = @i + 1
  if @i < @cat_length %>
    <%=","%>
  <%	
  end
   
  end %>
  }
}