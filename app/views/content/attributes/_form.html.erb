<%= form_for(@content_attribute) do |f| %>
  <% if @content_attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content_attribute.errors.count, "error") %> prohibited this content_attribute from being saved:</h2>

      <ul>
      <% @content_attribute.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :attribute_type_id %><br />
    <%= 
    	if @attrib_types.blank?
    		@attrib_types = []
    	end
    	
    	f.select :attribute_type_id, @attrib_types.collect { |t| [t.name, t.id]}, {:include_blank=>"Seleccione"}, {:class => 'combobox'}
    	
    	#f.number_field :attribute_type_id 
    %>
  </div>
  <div class="field">
    <%= f.label :data_type_id %><br />
    <%= 
    	if @data_types.blank?
    		@data_types = []
    	end
    	
    	f.select :data_type_id, @data_types.collect { |t| [t.name, t.id]}, {:include_blank=>"Seleccione"}, {:class => 'combobox'}
    	
    	#f.number_field :data_type_id 
	%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
